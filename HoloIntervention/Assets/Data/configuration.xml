<?xml version="1.0" encoding="utf-8"?>
<HoloIntervention>
  <!-- HMD coordinate frame is the HoloLens rendering coordinate frame -->
  <!-- Reference coordinate frame is the reference coordinate system of the magnetic tracker -->
  <Tools IGTConnection="NDITracker">
    <Tool 
      Model="hemisphere_stylus" 
      From="Tip"
      To="HMD"
      LerpEnabled="false" />
  </Tools>

  <CoordinateDefinitions>
  </CoordinateDefinitions>

  <CameraRegistration
    IGTConnection="2DImage"
    Dp="2"
    MinDistanceDivisor="16"
    Param1="255"
    Param2="30"
    MinRadius="20"
    MaxRadius="60"
    />

  <ManualRegistration
    IGTConnection="NDITracker"
    FromFrameName="Tool"
    ToFrameName="Reference"
    />

  <OpticalRegistration
    IGTConnection="NDITracker"
    RecalcThresholdCount="100"
    OpticalHMDCoordinateFrame="HoloLens"
    OpticalReferenceCoordinateFrame="Reference"
    />

  <IGTConnections>
    <xConnection
      Name="2DImage"
      Host="192.168.0.101"
      Port="18944"
      EmbeddedImageTransformName="ImageToReference" />
    <Connection
      Name="NDITracker"
      Host="192.168.0.100"
      Port="18944" />
    <xConnection
      Name="3DImage"
      Host="192.168.0.101"
      Port="18945"
      EmbeddedImageTransformName="VolumeToReference" />
  </IGTConnections>

  <SliceRendering 
    From="Image" 
    To="HMD"
    WhiteMapColour="1.0 0.0 0.0 1.0"
    BlackMapColour="0.0 0.0 1.0 1.0"
    IGTConnection="2DImage" />

  <VolumeRendering 
    From="Volume" 
    To="HMD"
    IGTConnection="3DImage" />

</HoloIntervention>